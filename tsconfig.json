{
	"extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "allowJs": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "checkJs": true,
        "esModuleInterop": true,
        "importsNotUsedAsValues": "error",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "isolatedModules": true,
        "removeComments": true,
        "paths": {
            "$lib":["src/lib"],
            "$lib/*":["src/lib/*"],
            "$/*": ["src/*"]
        }
    },
    "include": [
        "pages/**/*.svelte",
        "pages/**/*.ts",
        "src/**/*.svelte",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "**/*.test.ts"
    ],
    "exclude": [
        ".svelte-kit",
        "node_modules",
        "build"
    ]
}
