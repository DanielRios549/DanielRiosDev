{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "allowJs": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "checkJs": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "isolatedModules": true,
        "paths": {
            "$api/*": ["pages/api/*"],
            "$/*": ["src/*"]
        }
    },
    "include": [
        "pages/**/*.tsx",
        "pages/**/*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "**/*.test.ts"
    ],
    "exclude": [
        ".next",
        "node_modules",
        "build"
    ]
}
